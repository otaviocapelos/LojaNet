@model IEnumerable<LojaNet.Models.Cliente>

    @{
        ViewBag.Title = "Index";
    }

    <h2>Clientes</h2>
    <p>
        <a class="btn-info" href="/Cliente/Incluir">Novo</a>
    </p>


    <table class="table table-hover">
        <tr>
            <th>Nome</th>
            <th>Email</th>
        </tr>
        @foreach(var cliente in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(cliente.Nome, "Detalhes", new { id=cliente.Id })
                </td>
                <td>
                    @cliente.Email
                </td>
            </tr>
        }
    </table>
