@model LojaNet.Models.Cliente

@{
    ViewBag.Title = "Excluir";
}

<h4>Confirma a exclusao deste cliente?</h4>

<p>
    @Model.Nome
</p>
<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <hr/>
    <a href="/Cliente/Index" class="btn btn-default">Voltar</a>
    <input type="submit" value="Excluir" class="btn btn-danger"/>
</form>